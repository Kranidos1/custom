{
  "name": "moenia-website",
  "version": "1.0.0",
  "description": "Sito web aziendale moderno e personalizzabile per Moenia",
  "main": "index.html",
  "scripts": {
    "start": "serve .",
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o css/style.min.css css/style.css && cleancss -o css/colors.min.css css/colors.css",
    "minify-js": "uglifyjs js/main.js js/data-loader.js -o js/bundle.min.js",
    "optimize-images": "imagemin images/* --out-dir=images/optimized",
    "validate-html": "html-validate index.html",
    "lighthouse": "lighthouse index.html --output=json --output-path=./lighthouse-report.json",
    "test": "npm run validate-html && npm run lighthouse"
  },
  "keywords": [
    "website",
    "company",
    "responsive",
    "modern",
    "bootstrap",
    "javascript",
    "css",
    "html"
  ],
  "author": "Moenia Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moenia/website.git"
  },
  "bugs": {
    "url": "https://github.com/moenia/website/issues"
  },
  "homepage": "https://www.moenia.eu",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "live-server": "^1.2.2",
    "serve": "^14.2.0",
    "uglify-js": "^3.17.4",
    "imagemin-cli": "^7.0.0",
    "html-validate": "^8.0.0",
    "lighthouse": "^11.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
} 